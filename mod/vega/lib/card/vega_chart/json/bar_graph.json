{
  "width":350,
  "height":180,
  "padding":{
    "top":15,
    "left":5,
    "bottom":15,
    "right":5
  },
  "signals":[
    {
      "name":"tooltip",
      "value":{

      },
      "on":[
        {
          "events":"rect:mouseover",
          "update":"datum"
        },
        {
          "events":"rect:mouseout",
          "update":"{}"
        }
      ]
    }
  ],
  "data":[
    {
      "name":"answers",
      "url": "http://localhost:3000/Fred+dinosaurlabor+Answer/compact_answers.json"
    },
    {
      "name": "counts",
      "source": "answers",
      "transform": [
        {
          "type": "aggregate",
          "groupby" : ["value"],
          "fields": [
            "value"
          ],
          "ops": [
            "count"
          ],
          "as": [
            "count"
          ]
        }
      ]
    }
  ],
  "scales":[
    {
      "name":"xscale",
      "range":"width",
      "domain":{
        "data":"counts",
        "field":"value"
      },
      "type":"band",
      "padding":0.15
    },
    {
      "name":"yscale",
      "range":"height",
      "domain":{
        "data":"counts",
        "field":"count"
      },
      "type":"sqrt",
      "round":true
    },
    {
      "name":"color",
      "type":"ordinal",
      "domain":{
        "data":"answers",
        "field":"highlight",
        "sort":true
      },
      "range":[
        "#eeeeee",
        "#8ECDC7"
      ]
    }
  ],
  "marks":[
    {
      "type":"rect",
      "from":{
        "data":"counts"
      },
      "encode":{
        "enter":{
          "x":{
            "scale":"xscale",
            "field":"value"
          },
          "width":{
            "scale":"xscale",
            "band":true,
            "offset":-1
          },
          "y":{
            "scale":"yscale",
            "field":"count"
          },
          "y2":{
            "scale":"yscale",
            "value":0
          }
        },
        "update":{
          "fill":{
            "value":"#8ECDC7"
          }
        },
        "hover":{
          "fill":{
            "value":"#03998d"
          },
          "cursor":{
            "value":"pointer"
          }
        }
      }
    },
    {
      "type":"text",
      "encode":{
        "enter":{
          "align":{
            "value":"center"
          },
          "baseline":{
            "value":"bottom"
          },
          "fill":{
            "value":"#333"
          }
        },
        "update":{
          "x":{
            "scale":"xscale",
            "signal":"tooltip.value",
            "band":0.5
          },
          "y":{
            "scale":"yscale",
            "signal":"tooltip.count",
            "offset":-2
          },
          "text":{
            "signal":"tooltip.count"
          },
          "fillOpacity":[
            {
              "test":"datum === tooltip",
              "value":0
            },
            {
              "value":1
            }
          ]
        }
      }
    }
  ],
  "axes":[
    {
      "orient":"bottom",
      "scale":"xscale",
      "encode":{
        "labels":{
          "fill":{
            "value":"#333333"
          },
          "update":{
            "angle":{
              "value":30
            },
            "limit":{
              "value":70
            },
            "align":{
              "value":"left"
            }
          }
        }
      },
      "title":"Categories"
    },
    {
      "orient":"left",
      "scale":"yscale",
      "title":"Companies"
    }
  ]
}
