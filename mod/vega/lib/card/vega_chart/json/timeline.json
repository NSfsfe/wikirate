{
  "signals": [
    {
      "name": "interpolate",
      "value": "monotone"
    },
    {
      "name": "yearEnds",
      "init": "data('yearEnds')[0]"
    },    {
      "name": "startYear",
      "init": "yearEnds['min_year'] - 1 "
    },
    {
      "name": "endYear",
      "init": "yearEnds['max_year']"
    }
  ],
  "data": [
    {
      "name": "years"
    },
    {
      "name": "metricTypes",
      "url": "/Metric_Type+*type.json",
      "format": { "property": "items" }
    },
    {
      "name" : "yearEnds",
      "source": "years",
      "transform": [
        {
          "type": "aggregate",
          "ops":["min", "max"],
          "fields":["year", "year"]}
      ]
    },
    {
      "name": "counts",
      "source": "years",
      "transform" : [
        {
          "type": "impute",
          "groupby": [
            "metric_type_id"
          ],
          "key": "year",
          "keyvals": {
            "signal": "sequence(startYear, endYear)"
          },
          "field": "count",
          "method": "value",
          "value": 0
        },
        {
          "type": "collect",
          "sort": {
            "field": [
              "year",
              "metric_type_id"
            ]
          }
        },
        {
          "type": "stack",
          "groupby": [
            "year"
          ],
          "field": "count"
        },
        {
          "type": "lookup",
          "from": "metricTypes",
          "key": "id",
          "fields": ["metric_type_id"],
          "as": ["metricType"],
          "values": ["name"]
        },
        {
          "type": "formula",
          "expr": "{ metric_type_id: datum.metric_type_id }",
          "as": "filter"
        }
      ]
    },
    {
      "name": "totals",
      "source": "counts",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["year"],
          "fields": ["count"],
          "ops": ["sum"]
        },
        {
          "type": "formula",
          "expr": "{ year: datum.year }",
          "as": "filter"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": {
        "data": "counts",
        "field": "year",
        "sort": true
      }
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "counts",
        "fields": [
          "y1"
        ]
      }
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": {
        "scheme": "dark2"
      },
      "domain": {
        "data": "counts",
        "field": "metricType"
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "counts",
          "groupby": [
            "metricType"
          ]
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "year"
              },
              "y": {
                "scale": "yscale",
                "field": "y0"
              },
              "y2": {
                "scale": "yscale",
                "field": "y1"
              },
              "fill": {
                "scale": "color",
                "field": "metricType"
              }
            },
            "update": {
              "interpolate": {
                "signal": "interpolate"
              },
              "fillOpacity": {
                "value": 1
              }
            }
          }
        }
      ]
    },
    {
      "type": "rect",
      "from": {
        "data": "totals"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "year",
            "offset": 10
          },
          "x2": {
            "scale": "xscale",
            "field": "year",
            "offset": -10
          },
          "y": {
            "scale": "yscale",
            "field": "sum_count"
          },
          "y2": {
            "scale": "yscale",
            "value": 0
          },
          "fill": {
            "value": "#666"
          },
          "stroke": {
            "value": "#333"
          },
          "strokeWidth": {
            "value": 1
          }
        },
        "update": {
          "interpolate": {
            "signal": "interpolate"
          },
          "opacity": {
            "value": 0
          }
        },
        "hover": {
          "opacity": {
            "value": 0.4
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "type": "symbol"
    }
  ]
}
