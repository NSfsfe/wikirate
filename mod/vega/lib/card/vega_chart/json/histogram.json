{
  "scales":[
    {
      "name":"xscale",
      "range":"width",
      "domain": {
        "data": "counts",
        "fields": ["bin0", "bin1"]
      },
      "type":"linear"
    },
    {
      "name":"yscale",
      "range":"height",
      "domain":{
        "data":"counts",
        "field":"count"
      },
      "type":"linear",
      "round":true,
      "zero": true,
      "nice": true
    },
    {
      "name":"color",
      "type":"ordinal",
      "domain":{
        "data":"answers",
        "field":"highlight",
        "sort":true
      },
      "range":[
        "#eeeeee",
        "#8ECDC7"
      ]
    },
    {
      "name":"x_label",
      "type":"point",
      "range":"width"
    }
  ],
  "marks":[
    {
      "type":"rect",
      "from":{
        "data":"counts"
      },
      "encode":{
        "enter":{
          "x":{
            "scale":"xscale",
            "field":"bin0",
            "offset": 0.5
          },
          "x2":{
            "scale":"xscale",
            "field":"bin1",
            "offset": -0.5
          },
          "y":{
            "scale":"yscale",
            "field":"count"
          },
          "y2":{
            "scale":"yscale",
            "value":0
          }
        },
        "update":{
          "fill":{
            "value":"#8ECDC7"
          }
        },
        "hover":{
          "fill":{
            "value":"#03998d"
          },
          "cursor":{
            "value":"pointer"
          }
        }
      }
    },
    {
      "type":"text",
      "encode":{
        "enter":{
          "align":{
            "value":"center"
          },
          "baseline":{
            "value":"bottom"
          },
          "fill":{
            "value":"#333"
          }
        },
        "update":{
          "x":{
            "scale":"xscale",
            "signal":"(tooltip.bin0 + tooltip.bin1) / 2",
            "band":0.5
          },
          "y":{
            "scale":"yscale",
            "signal":"tooltip.count",
            "offset":-2
          },
          "text":{
            "signal":"tooltip.count"
          }
        }
      }
    }
  ],
  "axes":[
    {
      "orient":"bottom",
      "scale":"xscale",
      "encode":{
        "labels":{
          "update":{
            "angle":{
              "value":30
            },
            "limit":{
              "value":70
            },
            "align":{
              "value":"left"
            }
          }
        }
      },
      "title":"Value",
      "format":"~s"
    },
    {
      "orient":"left",
      "scale":"yscale",
      "tickMinStep": 1,
      "title":"# Answers"
    }
  ]
}